<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_inclusion_rate" model="ir.ui.view">
        <field name="name">product.template.form.inclusion.rate</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Add field in the general information tab -->
            <xpath expr="//field[@name='detailed_type']" position="after">
                <field name="inclusion_rate"/>
            </xpath>
        </field>
    </record>
</odoo>